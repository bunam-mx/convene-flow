extends layout

block menu 
  include components/menuBlock.pug
block title
  header.py-4.px-30
    h1.text-4xl.font-bold.mb-16 #[span AIESAD] 2025
block content
  .flex-1.py-4.px-30
    .grid.grid-cols-3.gap-6.pt-20#homeData
      section.p-8.border.border-gray-200.rounded.shadow-xs.flex.items-center
        h2.text-2xl.font-semibold.mb-4 #[span.mr-3.font-bold #{data.registeredUsers}] usuarios registrados

      section.p-8.border.border-gray-200.rounded.shadow-xs.flex.items-center
        h2.text-2xl.font-semibold.mb-4 #[span.mr-3.font-bold #{data.activeUsers}] usuarios activos

      section.p-8.border.border-gray-200.rounded.shadow-xs
        h2.text-2xl.font-semibold.mb-8 propuestas
        if Array.isArray(data.proposalsByState) && data.proposalsByState.length > 0
          ul
            each proposal in data.proposalsByState
              li.mb-4 #[span.mr-3.font-bold #{proposal.count}] #{proposal.state}
        else
          p No se han registrado propuestas
